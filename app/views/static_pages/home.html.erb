<% if logged_in? %>
  <div class="row">
  <h1><%= current_user.name %>のページ</h1>
  </div>


  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <div class="col-md-8">
      <h3>答案一覧</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>

<div class="center jumbotron">
  <%= link_to "答案を見る!", static_page_path(name: "constitution") ,class: "btn btn-lg btn-primary"%>
  <%= link_to "ログイン", login_path,class: "btn btn-lg btn-primary"%>


  <p></p>

  <%= link_to "答案を投稿する!", signup_path, class: "btn btn-lg btn-primary" %>


</div>
            
<% end %>          